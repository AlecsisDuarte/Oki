<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <size
                android:height="150dp"
                android:width="150dp"/>
            <solid
                android:color="@color/colorPrimary"/>
            <stroke
                android:width="2dip"
                android:color="@color/colorPrimary" />
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp" />
        </shape>
        <shape android:shape="oval">
            <size
                android:height="150dp"
                android:width="150dp"/>
            <solid
                android:color="@color/shadowColor"/>
            <padding
                android:bottom="25dp"
                android:left="20dp"
                android:right="22dp"
                android:top="20dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size
                android:height="149dp"
                android:width="149dp"/>
            <solid android:color="@color/darkBackground" />
            <stroke
                android:width="2dip"
                android:color="@color/darkBackground" />
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp" />
        </shape>
    </item>

</selector>