<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <size
                android:height="200dp"
                android:width="200dp"/>
            <solid
                android:color="@color/darkerBackground"/>
            <stroke
                android:width="2dip"
                android:color="@color/lighDarkerBackground" />
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp" />

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size
                android:height="200dp"
                android:width="200dp"/>
            <solid android:color="@color/textOnSecondary" />
            <stroke
                android:width="2dip"
                android:color="@color/darkerBackground" />
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp" />
        </shape>
    </item>

</selector>